{
  "name": "@symptom-checker/ui-kit",
  "version": "0.2.4",
  "private": true,
  "scripts": {
    "test:unit": "vue-cli-service test:unit",
    "test:verbose": "vue-cli-service test:unit --verbose",
    "lint": "vue-cli-service lint --fix",
    "stylelint": "stylelint src/**/*.{vue,scss} --fix",
    "build-storybook": "node scripts/create-icons-list.js && build-storybook -s ./public",
    "storybook": "node scripts/create-icons-list.js && start-storybook -s ./public -p 6006",
    "create-index": "node scripts/create-index.js",
    "create-component": "node scripts/create-component.js",
    "postinstall": "node scripts/create-index.js",
    "create-icons-list": "node scripts/create-icons-list.js"
  },
  "main": "index.js",
  "module": "index.js",
  "files": [
    "scripts/create-index.js",
    "src/*",
    "index.js"
  ],
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run stylelint"
    }
  },
  "dependencies": {
    "body-scroll-lock": "^3.1.5",
    "core-js": "^3.20.2",
    "crypto-browserify": "^3.12.0",
    "date-fns": "^2.28.0",
    "fast-deep-equal": "^3.1.3",
    "uid": "^2.0.0",
    "vue": "^3.2.26",
    "vue-router": "^4.0.11"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/preset-env": "^7.16.7",
    "@pxblue/storybook-rtl-addon": "^1.1.0",
    "@storybook/addon-a11y": "^6.4.9",
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/addon-measure": "^6.4.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "^6.4.9",
    "@storybook/manager-webpack5": "^6.4.9",
    "@storybook/vue3": "^6.4.9",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-airbnb": "^5.3.0",
    "@vue/test-utils": "^2.0.0-rc.12",
    "autoprefixer": "^10.4.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^27.4.5",
    "babel-loader": "^8.2.3",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^7.0.0",
    "file-save": "^0.2.0",
    "glob": "^7.2.0",
    "husky": "^7.0.4",
    "postcss": "^8.4.5",
    "prompt": "^1.2.0",
    "sass": "^1.45.2",
    "sass-loader": "^12.4.0",
    "storybook-addon-outline": "^1.4.2",
    "stylelint": "^14.2.0",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-scss": "^1.0.0-security",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-scss": "^4.1.0",
    "tailwindcss": "^3.0.9",
    "typescript": "^4.5.4",
    "uppercamelcase": "^3.0.0",
    "vue-jest": "^5.0.0-alpha.10",
    "vue-loader": "^16.5.0",
    "vue-svg-loader": "^0.17.0-beta.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "plugin:vue/vue3-recommended",
      "@vue/airbnb"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1
        }
      ],
      "max-len": [
        "off"
      ],
      "vue/max-len": [
        "error",
        {
          "code": 120,
          "template": 120,
          "tabWidth": 2,
          "comments": 120,
          "ignorePattern": "",
          "ignoreComments": true,
          "ignoreTrailingComments": true,
          "ignoreUrls": true,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true,
          "ignoreRegExpLiterals": true,
          "ignoreHTMLAttributeValues": true,
          "ignoreHTMLTextContents": true
        }
      ],
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 1,
          "multiline": {
            "max": 1,
            "allowFirstLine": false
          }
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/*.stories.js",
            "**/*.spec.js"
          ]
        }
      ],
      "prefer-destructuring": [
        "error",
        {
          "array": false
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "ignorePatterns": [
      "**/.storybook/*"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-scss",
      "stylelint-config-recess-order"
    ],
    "rules": {
      "selector-max-id": 0,
      "max-line-length": 120,
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "function",
            "if",
            "each",
            "for",
            "include",
            "mixin",
            "at-root",
            "return",
            "else",
            "extend"
          ]
        }
      ]
    }
  },
  "jest": {
    "setupFiles": [
      "core-js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".*\\.(vue)$": "vue-jest"
    },
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/*.{js,vue}",
      "!**/node_modules/**"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/scripts/"
    ]
  },
  "babel": {
    "presets": [
      [
        "@vue/cli-plugin-babel/preset",
        {
          "loose": true
        }
      ]
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
